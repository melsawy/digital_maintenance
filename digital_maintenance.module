function _dm_show_expense() {
  $items = array();
  $mcost = _dm_get_maintenance_cost();
  //MAX VALUE
  $max = max($mcost);
  $year = array_search($max, $mcost);
  $items[] = '<div class="dm-expense-value">' . $max . '</div><div class="dm-expense-text">'. t('Highest expense @year', array('@year' => $year)) . '</div>';
  //MIN VALUE
  $min = min($mcost);
  $year = array_search($min, $mcost);
  $items[] = '<div class="dm-expense-value">' . $min . '</div><div class="dm-expense-text">'. t('Highest expense @year', array('@year' => $year)) . '</div>';
  //AVG VALUE
  $avg = array_sum($mcost)/count($mcost);
  $items[] = '<div class="dm-expense-value">' . ceil($avg) . '</div><div class="dm-expense-text">'. t('Average annual expense') . '</div>';
  return theme('item_list', array('items' => $items, 'title' => '', 'attributes' => array('class' => 'dm-expense-data')));
}

